<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#e40000"></solid>
            <stroke android:width="1dp" android:color="#c70000"></stroke>
            <corners android:radius="3dp"></corners>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>
        </shape>
    </item>
    <item>
        <shape>
            <gradient  android:angle="270" android:endColor="#c70000" android:startColor="#e40000"></gradient>
            <stroke android:width="1dp" android:color="#c70000"></stroke>
            <corners android:radius="4dp"></corners>
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>
        </shape>
    </item>
</selector>